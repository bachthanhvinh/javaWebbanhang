<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!-- Cấu hình DataSource và JdbcTemplate -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/webbanhang?useSSL=false"/>
        <property name="username" value="root"/>
        <property name="password" value="your_password"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- Bean DaoProduct -->
    <bean id="daoProduct" class="dao.DaoProduct">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!-- Bean ProductController -->
    <bean id="productController" class="controller.ProductController">
        <property name="daoProduct" ref="daoProduct"/>
    </bean>
</beans>
